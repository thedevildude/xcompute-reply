{
  "manifest_version": 3,
  "name": "XCompute",
  "version": "1.0.0",
  "action": {
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    },
    "default_popup": "./assets/html/popup.html",
    "default_title": "X Compute Reply"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["src/scripts/index.js"]
    }
  ]
}
